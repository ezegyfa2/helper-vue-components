form-item-with-order(
    v-bind:label='label'
    v-on:update:order='(newOrder) => { this.$emit("update:order", newOrder) }'
    v-bind:validation_errors='validation_errors'
)
    range-slider(
        ref='sli' 
        v-bind:min="min"
        v-bind:max="max"
        v-bind:ruler="false"
        v-bind:label="false"
        v-bind:minValue="from_value"
        v-bind:maxValue="to_value"
        @input="updateValues"
        style="border: none; color: black"
    )
