.table-responsive
    table.table.table-bordered(width='100%' cellspacing='0')
        thead
            tr
                th(v-for='columnName in column_names') {{ columnName }}
        tfoot(v-if='with_footer')
            tr
                th(v-for='columnName in column_names') {{ columnName }}
        tbody
            tr(v-for='row in rows')
                td(v-for='column in row') {{ column }}
